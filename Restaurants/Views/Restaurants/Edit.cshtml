@model RestaurantItem

<div class="row">
   <div class="float-end mb-5">
        <a href="@Url.Action("Create", "Foods", new { restaurantId = Model.RestaurantId })" class="btn btn-success">Add Food</a>
   </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Restaurants <small>Edit</small></h5>
            </div>
            <div class="ibox-content">
                <form action="@Url.Action("Edit", "Restaurants")" 
                method="post" role="form" autocomplete="off">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RestaurantId" />

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                         <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Address">Address</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label asp-for="Telephone">Telephone</label>
                                <input asp-for="Telephone" class="form-control" />
                                <span asp-validation-for="Telephone" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group text-right">
                        <div>
                            <a href="@Url.Action("Index", "Restaurants")" class="btn btn-white btn-sm">Cancel</a>
                            <button class="btn btn-primary btn-sm" type="submit">Save</button>
                        </div>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>
</div>